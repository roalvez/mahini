<div class="max-w-md mx-auto mt-20 bg-white p-8 rounded shadow">
  <h1 class="text-2xl font-bold mb-6 text-center">Admin Login</h1>
  <%= form_with url: login_path, method: :post, data: { turbo: true }, class: "space-y-4" do |form| %>
    <div>
      <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= form.email_field :email, autofocus: true, required: true, class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-pink-500 focus:border-pink-500 px-4 py-3 text-base" %>
    </div>
    <div>
      <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password, required: true, class: "mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-pink-500 focus:border-pink-500 px-4 py-3 text-base" %>
    </div>
    <div>
      <%= form.submit "Login", class: "w-full bg-pink-600 text-white py-2 rounded hover:bg-pink-700 transition" %>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="mt-4 text-red-600 text-center"><%= flash[:alert] %></div>
  <% end %>
</div>
